<div class="container">
  <div class ="row">
    <div class="col-xs-3 col-sm-3 col-sm-offset-1">
      <%= simple_form_for([@event,@task]) do |f| %>
        <%= f.input :name, placeholder: "name"%>
        <%= f.input :description, placeholder: "task description" %>
        <%= f.input :status, collection: Task::STATUS %>
        <%= f.association :urgency%>
        <%= f.association :location%>
        <%= f.submit class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>

