<div class="volunteer-lists">
  <div class="volunteer-list-card">
    <div class="volunteer-list-card-header">Volunteers</div>
      <ul>
        <% @volunteers.each do |volunteer| %>
          <li>
            <%= volunteer.user.first_name %> <%= volunteer.user.last_name %> <i class="fas fa-plus-circle"></i>
          </li>
        <% end %>
      </ul>
    <div class="volunteer-list-card-footer">
      <%= link_to '#' do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  </div>
</div>


